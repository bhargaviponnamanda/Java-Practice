package Random;

import java.util.*;

public class SubArrayOfLengthKWithHighestSum {
    public static void main(String[] args) {
        int[] arr = {2, 1, 5, 1, 3, 2};
        int k = 3;

        List<Integer> result = getHighestSumSubarray(arr, k);
        System.out.println("Subarray with highest sum of length " + k + ": " + result);
    }

    public static List<Integer> getHighestSumSubarray(int[] arr, int k) {
        int maxSum = Integer.MIN_VALUE;
        List<Integer> maxSubarray = new ArrayList<>();

        for (int i = 0; i <= arr.length - k; i++) {
            List<Integer> tempSubarray = new ArrayList<>();
            int tempSum = 0;

            // Collect subarray of length k
            for (int j = i; j < i + k; j++) {
                tempSubarray.add(arr[j]);
                tempSum += arr[j];
            }

            // Update if this subarray has higher sum
            if (tempSum > maxSum) {
                maxSum = tempSum;
                maxSubarray = new ArrayList<>(tempSubarray); // âœ… create a copy
            }
        }

        return maxSubarray;
    }
}
